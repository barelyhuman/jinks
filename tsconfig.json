{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": ".",
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules/*", "dist"]
}
